// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "show_inline_completions": true,
  "base_keymap": "VSCode",
  "assistant": {
    "button": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "ui_font_size": 14,
  "buffer_font_size": 13,
  "buffer_font_features": {
    "calt": false
  },
  "theme": {
    "mode": "system",
    "light": "One Dark Pro",
    "dark": "One Dark Pro"
  },
  "tab_size": 2,
  "auto_install_extensions": {
    "html": true,
    "dockerfile": true,
    "docker-compose": false,
    "assembly": true,
    "git-firefly": true,
    "java": true,
    "lua": true,
    "make": true,
    "one-dark-pro": true,
    "pylsp": true,
    "toml": true
  },
  "hour_format": "hour24",
  "hard_tabs": false,
  "restore_on_startup": "last_workspace",
  "project_panel": {
    "button": false,
    "default_width": 250,
    "dock": "right",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 15,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": null
    },
    "indent_guides": {
      "show": "always"
    }
  },
  "outline_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "indent_guides": {
      "show": "always"
    },
    "scrollbar": {
      "show": null
    }
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "pylsp": {
    "plugins": {
      "pylint": {
        "enabled": true
      }
    }
  }
}

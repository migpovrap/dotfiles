# Custom Functions

# Custom Functions to create a new linux container (Made by @inesiscosta)
function new_linux() {
  # Check if Podman machine is running
  if ! podman machine inspect --format '{{.State}}' | grep -q "running"; then
    echo "Starting Podman Desktop and machine..."
    open -a "Podman Desktop"
    podman machine start
    # Wait until Podman is responsive
    while ! podman info > /dev/null 2>&1; do
      sleep 1
    done
  fi

  podman run -it -v "$PWD":/dir -w /dir --name "$1" linux:1.0
  
  podman machine stop
  osascript -e 'quit app "Podman Desktop"'
}

# Function to launch a container with a name that was created before and open it in the pwd (Made by @inesiscosta)
function linux() {
  container_name="$1"

  # Check if Podman machine is running
  if ! podman machine inspect --format '{{.State}}' | grep -q "running"; then
    echo "Starting Podman Desktop and machine..."
    open -a "Podman Desktop"
    podman machine start
    while ! podman info > /dev/null 2>&1; do
      sleep 1
    done
  fi

  # Check if the container is running
  if podman ps --format '{{.Names}}' | grep -q "^$container_name$"; then
    # Container is running, exec into it
    podman exec -it "$container_name" /bin/bash
  else
    # Container is not running, try to start it
    if podman ps -a --format '{{.Names}}' | grep -q "^$container_name$"; then
      # Container exists but is stopped, start it
      podman start -i "$container_name"
    else
      # Container does not exist, print error
      echo "Container '$container_name' does not exist."
    fi
  fi

  podman machine stop
  osascript -e 'quit app "Podman Desktop"'
}

# Check if tmux is installed and not already running
if command -v tmux &> /dev/null && [ -z "$TMUX" ]; then
  echo -n "Do you want to start tmux? [y/N] "
  read answer
  case "$answer" in
    [yY][eE][sS]|[yY])
      tmux attach-session -t default || tmux new-session -s default
      ;;
  esac
fi
